<h1 class="groceryIndex">Your Shopping List</h1>

<div class="index">
<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Qty</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  </thead>

  <tbody>
  <% @groceries.each do |grocery| %>
      <tr>
        <td><%= grocery.groceries %></td>
        <td><%= grocery.qty %></td>
        <!--Grocery show page unnecessary-->
        <!--<td><%#= link_to 'Show', grocery %></td>-->
        <td><%= link_to 'Edit', edit_grocery_path(grocery) %></td>
        <td><%= link_to 'Delete', grocery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>
<br />

<%= link_to 'Add to Your Shopping List', new_grocery_path %><br/>
